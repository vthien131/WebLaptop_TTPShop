@model IEnumerable<TTPShop.Models.DanhMuc>

<div class="shop__sidebar">
    <div class="sidebar__categories">
        <div class="section-title">
            <h4>Danh mục</h4>
        </div>
        <div class="categories__accordion" style="background-color: lightpink">
            <div class="accordion" id="accordionExample">
                <div class="card">
                    <div class="card-heading" style="background-color: lightpink">
                        <a data-toggle="collapse" data-target="#collapseTwo">Laptops</a>
                    </div>
                    <div id="collapseTwo" class="collapse show" data-parent="#accordionExample">
                        <div class="card-body" style="background-color: lightpink">
                            <ul>
                                @foreach (var item in Model)
                                {
                                    <li><a href="@Url.Action("Shop","Home",new { MaDM = item.MaDM })">@item.TenDM</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        <aside class="single_sidebar_widget search_widget">
            <form action="#">
                <div class="form-group">
                    <div class="input-group mb-3">
                        <input name="searchString" type="text" class="form-control" placeholder='Từ khóa tìm kiếm'
                               onfocus="this.placeholder = ''"
                               onblur="this.placeholder = 'Từ khóa tìm kiếm'">
                        <div class="input-group-append">
                            <button class="btn" type="button"><i class="ti-search"></i></button>
                        </div>
                    </div>
                </div>
                <button class="btn btn-success"
                        type="submit">
                    Tìm kiếm
                </button>
            </form>
        </aside>
    }
</div>

@*styles*@
<style>
    .categories__accordion ul li a:hover {
        color: white;
        background-color: #6c757d;
        border-radius: 5px;
    }

    .card-body:hover {
        background-color: #ffc0cb;
    }

    .product__item__pic {
        transition: transform 0.5s ease-in-out; /* thêm hiệu ứng transition */
        border: 1px solid red;
        border-radius: 1.5px;
        width: 280px;
        height: 200px;
        margin: 0 auto;
        overflow: hidden;
    }

        .product__item__pic:hover {
            transform: scale(1.1) /*rotate(0.5deg)*/;
            opacity: 1;
            cursor: pointer;
            z-index: 1;
        }

        .product__item__pic img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
</style>